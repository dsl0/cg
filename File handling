#include<iostream>
#include<string>
#include<fstream>
using namespace std;
class Student
{
int rollno;
string name;
int marks;
public:
void input()
{
cout << "Enter Roll No.";
cin>>rollno;
cout << "Enter Name : ";
cin>>name;
cout << endl;
cout << "Enter marks : ";
cin>>marks;
}
void display()
{
cout << "Roll No. : "<<rollno<<endl;
cout << "Name : " << name<<endl;
cout << "Marks : "<<marks<<endl;
}
};
int main()
{
Student s[50];
fstream f;
int n;
cout << "Enter the number of students to be inserted : ";
cin>>n;
f.open("sample1.txt",std::ios::out);
for(int i=0;i<n;i++)
{
s[i].input();
f.write((char *)&s[i],sizeof(s[i]));
}
f.close();
f.open("sample1.txt",std::ios::in);
cout << "----------DATA-----------"<<endl;
for(int i=0;i<n;i++)
{
f.read((char *)&s[i],sizeof(s[i]));
s[i].display();
}
f.close();
